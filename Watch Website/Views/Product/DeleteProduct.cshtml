@model Watch_Website.Models.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Admin.cshtml";
}


<h3 class="heading mt-4">Are you sure you want to delete this?</h3>

<div class="view">

    <img src="@Url.Content(Model.Image)"  />

    <div class="content">
        <h1 class="name">@Html.DisplayFor(model => model.Name)</h1>

        <h5 class="model">@Html.DisplayFor(model => model.Model)</h5>

        <h5 class="brand">@Html.DisplayFor(model => model.Brand)</h5>

        <h3 class="price"><span>₹</span>@Html.DisplayFor(model => model.Price)</h3>

        @using (Html.BeginForm("DeleteProduct", "Product", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-actions carts">
                <input type="submit" value="Delete" class="btn btn-default " />
            </div>
        }

    </div>

</div>

