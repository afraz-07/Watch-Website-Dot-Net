@model Watch_Website.Models.Product

@{
    ViewBag.Title = "ViewDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";

}



<div class="view">

    <img src="@Url.Content(Model.Image)" height="auto" width="400px" />

    <div class="content">
        <h1 class="name">@Html.DisplayFor(model => model.Name)</h1>

        <h5 class="model">@Html.DisplayFor(model => model.Model)</h5>

        <h5 class="brand">@Html.DisplayFor(model => model.Brand)</h5>

        <h3 class="price"><span>₹</span> @ViewBag.Price</h3>

        <div class="carts"><a href=@Url.Action("AddToCart" , "Cart" ,  new {id = Model.Id , name = Model.Name , model = Model.Model , brand = Model.Brand , price = Model.Price , img = Model.Image  } )> Add to Cart &nbsp; <i class="fa-solid fa-cart-shopping"></i> </a></div>

        <div class="buy"><a href=@Url.Action("BuyNow" , "CustomerMVC" , new {Mobile = @User.Identity.Name , pname = Model.Name , pmodel = Model.Model , pbrand = Model.Brand , pprice = Model.Price , pimg = Model.Image })> Buy Now &nbsp; <i class="fa-solid fa-bag-shopping"></i></a></div>
                
    </div>

</div>

<style>
    .view{
        margin:50px 0;
    }

    .qty input{
        width:110px;
        text-align:center;
    }

    .qty {
        margin-bottom: 30px;
        font-family: font-family: 'Rubik', sans-serif;
        font-weight:600;
    }
   
    .view img {
        cursor: zoom-in;
        transition: opacity .5s;
        display: block;
        
    }

    .carts a {
        color: white;
        text-decoration: none;
        background-color: black;
        padding: 10px 50px;
        text-transform: uppercase;
        font-family: 'Questrial', sans-serif;
        font-weight: lighter;
        border: 1px solid black;
    }

    .buy a {
        text-decoration: none;
        color: black;
        border: 1px solid black;
        background-color: white;
        padding: 10px 66px;
        text-transform: uppercase;
        font-family: 'Questrial', sans-serif;
        font-weight: 700;
    }

        .buy a:hover {
            background-color: black;
            color: white;
            font-weight: lighter;
        }

    .carts a:hover {
        background-color: white;
        color: black;
        border: 1px solid black;
        font-weight: 700;
    }

    .buy{
        margin-top:30px;
    }

    .view{
       display:flex;
       margin-left:10%;
    }

    .content{
        margin:25px 0 0 10%;
    }

    .name {
        font-family: 'Prata', serif;
    }

    .model {
        font-family: 'Prompt', sans-serif; 
    }

    .brand {
        font-family: 'Play', sans-serif;
        text-transform: uppercase;
    }

    .price {
        font-family: 'Kanit', sans-serif;
    }

    .name, .model, .brand, .price {
        margin: 20px 0;
    }
</style>