@model Watch_Website.Models.Product

@{
    ViewBag.Title = "ViewDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="view">

    <img src="@Url.Content(Model.Image)" height="auto" width="400px" />

    <div class="content">
        <h1 class="name">@Html.DisplayFor(model => model.Name)</h1>

        <h5 class="model">@Html.DisplayFor(model => model.Model)</h5>

        <h5 class="brand">@Html.DisplayFor(model => model.Brand)</h5>

        <h3 class="price"><span>₹</span> @ViewBag.Price</h3>

        <div class="carts"><a href=@Url.Action("AddToCart" , "Cart" ,  new {id = Model.Id , name = Model.Name , model = Model.Model , brand = Model.Brand , price = Model.Price , img = Model.Image } )> Add to Cart &nbsp; <i class="fa-solid fa-cart-shopping"></i> </a></div>

        <div class="buy"><a href=@Url.Action()> Buy Now &nbsp; <i class="fa-brands fa-shopify"></i> </a></div>
    </div>

</div>

<style>
    .carts a {
        color: white;
        text-decoration: none;
        background-color: black;
        padding: 10px 50px;
        text-transform: uppercase;
        font-family: 'Rubik', sans-serif;
        font-weight: lighter;
        border: 1px solid black;
    }

    .buy a {
        text-decoration: none;
        color: black;
        border: 1px solid black;
        background-color: white;
        padding: 10px 66px;
        text-transform: uppercase;
        font-family: 'Rubik', sans-serif;
        font-weight:700;
    }

        .buy a:hover {
            background-color: black;
            color: white;
            font-weight: lighter;
        }

    .carts a:hover {
        background-color: white;
        color: black;
        border: 1px solid black;
        font-weight: 700;
    }

    .buy{
        margin-top:30px;
    }

    .view{
       display:flex;
       margin-left:10%;
    }

    .content{
        margin:10px 0 0 10%;
    }

    .name {
        font-family: 'Prata', serif;
    }

    .model {
        font-family: 'Prompt', sans-serif; 
    }

    .brand {
        font-family: 'Play', sans-serif;
        text-transform: uppercase;
    }

    .price {
        font-family: 'Kanit', sans-serif;
    }

    .name, .model, .brand, .price {
        margin: 20px 0;
    }
</style>