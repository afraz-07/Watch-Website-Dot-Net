<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Watch Collection</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />


    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kanit:wght@300&family=Montserrat:wght@300;400&family=Play&family=Prata&family=Prompt&family=Rajdhani:wght@500&family=Raleway&family=Rubik:wght@300&family=Ubuntu:wght@300;400&display=swap" rel="stylesheet">
</head>
<body>




    <nav class="navbar navbar-expand-lg ">
        <div class="container-fluid">
            <img src="~/Web Images/wclogo.png" class="logoimg"/>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item ms-3">
                        @Html.ActionLink("HOME", "Index", "Home", new {} , new { @class = "nav-link active" })
                    </li>
                    <li class="nav-item ms-3">
                        @Html.ActionLink("TOP BRANDS", "TopBrands", "Brand",new {}, new { @class = "nav-link active" })
                    </li>
                </ul>


                <div class="btn-group dropstart" id="search">


                    <form action="@Url.Action("Index", "Home")" method="get" class="navbar-form navbar-right" id="searchbar">
                        <button type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa-solid fa-magnifying-glass"></i>
                        </button>
                        <ul class="form-group dropdown-menu" style="padding:0; margin-top:16px">
                            <li id="flex"><input type="text" name="searchtext"> <button type="submit" class="btn btn-default but">Search</button></li>

                        </ul>
                    </form>

                    <div class="cart">
                        <a href=@Url.Action("MyCart" , "Cart" , new {})> <i class="fa-solid fa-cart-shopping"></i></a>
                    </div>


                    <div class="dropdown">
                        <button><i class="fa-solid fa-circle-user"></i></button>
                        <div class="dropdown-options">
                            @if (User.Identity.IsAuthenticated)
                            {
                                
                                <a href=@Url.Action("Logout" , "CustomerMVC")>Logout</a>
                            }
                            else
                            {
                                <a href=@Url.Action("UserLogin" , "CustomerMVC")>User Login</a>
                                <a href=@Url.Action("AdminLogin" , "Admin")>Admin Login</a>

                            }
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </nav>
 

    <div class=" body-content">
        @RenderBody()

   

        <footer class="py-3 my-4">


            <div class="logo">
                <img src="~/Web Images/wclogo.png" />

                <h2 class="heading">Watch Collections</h2>
            </div>


            <h6 class="desc">
                Elevate Your Style, Embrace the Extraordinary
            </h6>

            <ul>
                <li><a href=@Url.Action()><i class="fa-brands fa-facebook-f"></i></a></li>
                <li><a href=@Url.Action()><i class="fa-brands fa-instagram"></i></a></li>
                <li><a href=@Url.Action()><i class="fa-brands fa-twitter"></i></a></li>
                <li><a href=@Url.Action()><i class="fa-solid fa-phone"></i></a></li>
                <li><a href=@Url.Action()><i class="fa-solid fa-envelope"></i></a></li>
            </ul>

            <div class="loc"><i class="fa-solid fa-location-dot"></i> Watch World , India</div>

            <hr />

            <p>&copy; @DateTime.Now.Year - Watch Collection Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>



<style>

    .logoimg{
        width:50px;
        height:auto;
       
    }
    footer i{
        font-size:1.5rem;
    }

    .loc{
        font-size:0.7rem;
        text-align:center;
        margin-bottom:15px;
    }

    .loc i{
        color:dimgrey;
        font-size:0.8rem;
    }

    .desc {
        text-align: center;
        font-family: 'Ubuntu', sans-serif;
        text-transform: capitalize;
        font-weight: 500;
        margin:20px 0 ;
    }


    .logo{
        margin-top:30px;
        display:flex;
        justify-content:center;
        gap:20px;
        
    }

    .heading {
        font-family: 'Raleway', sans-serif;
        text-align: center;
        margin:10px 0;
        text-transform: uppercase;
        font-weight:500;
    }

    footer {
        background-color: #e5e5e5;
        margin: 0;
        padding: 20px;
        font-family: 'Kanit', sans-serif;
        text-transform: uppercase;
    }

    footer ul{
        display :flex;
        justify-content:center;
        gap:50px;
        list-style:none;
        margin:30px 0 20px 0;
        padding:0;
        
    }

    footer ul li a {
        
        color: dimgrey;
    }

    footer ul li a:hover {
        color:black;
    }

    footer img{
        margin-top:5px;
        width:50px;
        height:45px;
        
    }

    footer p {
        font-family: 'Kanit', sans-serif;
        text-align:center;
    }

    .body-content{
        margin-top:0;
    }

    form{
        display:flex;
    }

    nav {
        font-family: 'Kanit', sans-serif;
        font-weight: 500;
        background-color: #e5e5e5;
    }

    #searchbar input , #searchbar button{
        height:25px;
    }

    .but{
        padding: 0 10px 2px 0;
    }

    #search{
        position:absolute;
        right:50px;
    }


    #search button , #search ul li input{
        border:none;
        outline:none;
        
    }

    #search button{
        background-color:transparent;
    } 

    #flex{
        display:flex;
        
    }

    .cart a i{
        padding-top: 20px;
        color:black;
    }
   

    .dropdown {
        display: inline-block;
        position: relative;
    }

    button {
        border: none;
        border-radius: 5px;
        padding: 15px 30px;
        font-size: 18px;
        cursor: pointer;
    }

        button:hover {
            background-color: #ddd;
        }

    .dropdown-options {
        display: none;
        position: absolute;
        overflow: auto;
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0px 10px 10px 0px rgba(0,0,0,0.4);
        z-index:9999;
        width:120px;
    }

    .dropdown:hover .dropdown-options {
        display: block;
    }

    .dropdown-options a {
        display: block;
        color: #000000;
        padding: 5px;
        text-decoration: none;
        padding:10px 10px;
    }

        .dropdown-options a:hover {
            color: #0a0a23;
            background-color: #ddd;
            border-radius: 5px;
        }

   
</style>