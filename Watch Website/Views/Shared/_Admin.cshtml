<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />



    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kanit:wght@300&family=Montserrat:wght@300;400&family=Play&family=Prata&family=Prompt&family=Rajdhani:wght@500&family=Raleway&family=Rubik:wght@300&family=Ubuntu:wght@300;400&display=swap" rel="stylesheet">

</head>
<body>




    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <img src="~/Web Images/Logo.png" height="auto" width="50px"/> 
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("HOME", "", "", new { @class = "nav-link active" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("BRANDS", "", "", new { @class = "nav-link active" })
                    </li>
                    <li class="nav-item">
                        @*@Html.ActionLink("Home", "", "", new { @class = "nav-link active" })*@
                    </li>
                </ul>


                <div class="btn-group dropstart" id="search">
                    <button type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </button>
                    <ul class="dropdown-menu" style="padding:0; margin-top:10px">
                        <li id="flex"><input type="search" /> <input type="submit" value="Search" class="btn btn-outline-dark" /> </li>
                    </ul>

                    <div class="cart"> <i class="fa-solid fa-cart-shopping"></i></div>

                    <div class="dropdown">
                        <button><i class="fa-solid fa-circle-user"></i></button>
                        <div class="dropdown-options">
                            <a href="#">Dashboard</a>
                            <a href="#">Setting</a>
                            <a href="#">Logout</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </nav>


    <div class="container body-content">
        @RenderBody()
       
        <footer>
            <p>&copy; @DateTime.Now.Year - Watch Collection Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>



<style>
    nav i{
        color:white;
    }

    nav {
        font-family: 'Kanit', sans-serif;
        font-weight: 500;
        /* font-family: 'Montserrat', sans-serif;*/
    }

    #search {
        position: absolute;
        right: 50px;
    }


        #search button, #search ul li input {
            border: none;
            outline: none;
        }

        #search button {
            background-color: transparent;
        }

    #flex {
        display: flex;
    }

    .cart {
        padding-top: 16px
    }


    .dropdown {
        display: inline-block;
        position: relative;
    }

    button {
        border: none;
        border-radius: 5px;
        padding: 15px 30px;
        font-size: 18px;
        cursor: pointer;
    }

        button:hover {
            background-color: #ddd;
        }

    .dropdown-options {
        display: none;
        position: absolute;
        overflow: auto;
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0px 10px 10px 0px rgba(0,0,0,0.4);
    }

    .dropdown:hover .dropdown-options {
        display: block;
    }

    .dropdown-options a {
        display: block;
        color: #000000;
        padding: 5px;
        text-decoration: none;
        padding: 10px 20px;
    }

        .dropdown-options a:hover {
            color: #0a0a23;
            background-color: #ddd;
            border-radius: 5px;
        }
</style>