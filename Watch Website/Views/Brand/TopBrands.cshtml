@model IEnumerable<Watch_Website.Models.Brand>

@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="carouselExampleFade" class="carousel slide carousel-fade @ViewBag.None" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Web Images/banner4.png" class="d-block w-90" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/Web Images/Banner5.png" class="d-block w-90" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/Web Images/Banner6.png" class="d-block w-90" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/Web Images/Banner7.png" class="d-block w-90" alt="...">
        </div>
    </div>
    <button class="carousel-control-prev visually-hidden" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next visually-hidden" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>


<h2 class="heading"> Top Brands</h2>

<h6 class="desc">beauty of a classic watch design, a piece of art you wear on your wrist</h6>


@foreach (var item in Model)
{
    <div class="topbrands d-inline-block">

        <a href=@Url.Action("DisplayBrand" , new {b = item.Name})>
            <img src="@Url.Content(item.Image)" />
        </a>

    </div>

}

<style>

    .desc {
        text-align: center;
        font-family: 'Ubuntu', sans-serif;
        text-transform: capitalize;
        font-weight: 500;
    }

    .topbrands img {
        width: 150px;
        height: auto;
        margin: 50px;
        align-self:safe center;
    }

    .topbrands {
        text-align: center;
        margin-left: 10px;
    }

    .heading {
        font-family: 'Raleway', sans-serif;
        text-align: center;
        margin: 30px 0;
        text-transform: uppercase;
    }
</style>
























