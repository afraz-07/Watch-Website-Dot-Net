@model Watch_Website.Models.Customer

@{
    ViewBag.Title = "UserLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@using (Html.BeginForm())
{
    try
    {
        @Html.AntiForgeryToken()

        <div class="form">
            <div class="form-horizontal">

                <h2>User Login</h2>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group d-flex inp">
                    @Html.LabelFor(model => model.MobileNo, htmlAttributes: new { @class = "control-label " })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.MobileNo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MobileNo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group d-flex inp">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label " })
                    <div class="col-md-10">
                        @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group login">
                    <div class="col-md-offset-0 col-md-0">
                        <input type="submit" value="Login" class="btn" />
                    </div>

                    <div class="col-md-offset-0 col-md-0">
                        <a href=@Url.Action("UserRegister") class="btn">SignUp</a>
                    </div>
                </div>
            </div>
        </div>

    }
    catch
    {
        <h1>An Error Accured</h1>

    }

}

