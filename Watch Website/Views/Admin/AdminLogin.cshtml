@model Watch_Website.Models.Admin

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form">
    <div class="form-horizontal">
        <h2>Admin Login</h2>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group d-flex inp" id="userid">
            @Html.LabelFor(model => model.UserId, htmlAttributes: new { @class = "control-label " })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group d-flex inp" id="pass">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group login">
            <div class="col-md-offset-0 col-md-0">
                <input type="submit" value="Login" class="btn btn-default" />
            </div>
        </div>
    </div>
</div>
}


<style>
    #userid{
        margin-left:22%;
    }

    #userid label{
        margin-right: 16px;
    }

    .login {
        text-align: center;
    }

        .login .btn {
            color: white;
            background-color: transparent;
            border: 1px solid white;
            border-radius: 0px;
            width: 100px;
            font-family: 'Raleway', sans-serif;
        }

            .login .btn:hover {
                color: #2f7dfa9f;
                font-weight: 600;
                background-color: white;
            }

    #pass input {
        margin-left: 5px;
    }

    .inp {
        margin-left: 20%;
    }

    .form input {
        background-color: transparent;
        outline: none;
        border: none;
        border-bottom: 1px solid white;
        margin: 20px 0;
        color: white;
    }
    .form label {
        padding: 22px 15px 0 0;
        text-align: center;
        font-family: 'Raleway', sans-serif;
    }

    .form h2 {
        font-family: 'Rajdhani', sans-serif; 
        text-align: center;
    }

    .form {
        width: 500px;
        color: white;
        background-color: #2f7dfa9f;
        align-items: center;
        position: relative;
        top: 100px;
        left: 100px;
        padding: 30px 0 20px 0;
    }

    body {
        background-image: url('../../web images/bg5.jpeg');
        background-size: cover;
        background-position-y: 0px;
    }

    footer {
        display: none;
    }
</style>